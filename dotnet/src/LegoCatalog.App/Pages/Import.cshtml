@page
@model LegoCatalog.App.Pages.ImportModel
@{
    ViewData["Title"] = "Import Data";
}
<h3>Import Catalog Data</h3>
<p>Select a <code>catalog.json</code> file to upload. New figure IDs will be inserted; existing ones skipped.</p>
<form method="post" enctype="multipart/form-data">
    <input type="file" name="CatalogFile" />
    <button type="submit">Upload & Import</button>
</form>
@if (Model.Message is not null)
{
    <p>@Model.Message</p>
}
