@page "/import"
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms
@inject ImportService ImportService


<h3>Import Catalog Data</h3>
<p>Upload a <code>catalog.json</code> file. New figures (by unique ID) will be inserted; existing ones skipped.</p>

<input type="file" @onchange="OnChange" />

@if (!string.IsNullOrEmpty(message))
{
    <p>@message</p>
}

@code {
    private string? message;

    private async Task OnChange(ChangeEventArgs e)
    {
        // Browser will not directly provide the file stream to server in this simplified example without InputFile.
        // For simplicity (demo), instruct user to use startup import or future enhancement.
        message = "Inline file upload component unavailable in this minimal build. Use startup import (SEED_DATA_PATH) for now.";
        await Task.CompletedTask;
    }
}
